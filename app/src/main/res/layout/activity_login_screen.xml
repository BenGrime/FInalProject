<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen"
    android:background="@color/purple"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lwvImage"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/lwv"
        android:visibility="visible">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rides Manager"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:textStyle="bold">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:hint="Email"
            android:textColor="@color/black"
            android:maxLines="1"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz123456789@-."
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:background="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        app:endIconMode="password_toggle"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:hint="Password"
            android:textColor="@color/black"
            android:maxLines="1"
            android:inputType="textPassword"
            android:padding="10sp"
            android:background="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:text="Login"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/customGreen"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="30sp">

    </TextView>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="Forgot your password?"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="30sp">

    </TextView>

    <TextView
        android:id="@+id/biotemtic"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="Use Biometrics"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="10sp">

    </TextView>

</LinearLayout>