<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Your LinearLayout goes inside the FrameLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center_horizontal">

        <!-- First section with the back button, title, and placeholder image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/backBtnViewRide"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/back_arrow"
                android:backgroundTint="@color/purple"/>

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:text="Lightwater Valley"
                android:textColor="@color/purple"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Spinner for selecting ride -->
        <Spinner
            android:id="@+id/rideSelectView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/purple"
            android:contentDescription="Category selector spinner"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="10sp"
            android:textAlignment="center" />

        <!-- Avatar and Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/avatarRideView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                android:background="@drawable/ride_icon_app"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp" />


            <TextView
                android:id="@+id/rideNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10sp"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Second section with ride name and edit button -->


        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/trainStaffOnRideBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple"
                android:text="Add Staff to Ride"
                android:textColor="@android:color/white"
                android:layout_marginEnd="18sp"/>

            <Button
                android:id="@+id/editBtnRide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:text="Edit"
                android:textColor="@android:color/white"
                android:enabled="false"
                android:layout_marginStart="20sp"/>
        </LinearLayout>

        <!-- GridLayout for displaying ride details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/minAgeToAttTxt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:text="Minimum age to attend: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="20sp" />

            <TextView
                android:id="@+id/minAgeToOpTxt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:text="Minimum age to operate: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="20sp"
                android:layout_marginTop="20sp" />

            <TextView
                android:id="@+id/minNumAttTxt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:text="Minimum number of attendants: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="20sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/MinNumOpTxt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:text="Minimum number of operators: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="20sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/PrefNumAttTxt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:text="Preferred number of attends: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="20sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/PrefNumOpTxt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:text="Preferred number of operators: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="20sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:id="@+id/openTxt"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/purple"
                android:text="Is the ride Open: "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="20sp"
                android:layout_marginTop="20sp"/>
        </LinearLayout>


        <!-- Scrollable GridLayout for staff trained on rides -->
        <TextView
            android:id="@+id/showStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Staff Trained"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginTop="20sp"/>

        <GridLayout
            android:id="@+id/gridLayoutRideView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="1"
            android:visibility="gone"
            android:padding="8dp">

        </GridLayout>

    </LinearLayout>


</ScrollView>
